tr(data-user-id=c.user_id, data-email=c.email, class=c.cls)
  td
    img(src=c.picture, style='width: 40px; height: 40px; max-width: none;')
  td
    strong= (c.name || c.email)
    br
    if c.name
      small= c.email

  td
    .dropdown
      a.dropdown-toggle.edit-permissions-dd(role='button', data-toggle='dropdown', href='#')
        | #{c.type} 
      ul.dropdown-menu(role='menu', aria-labelledby='drop4')
        li
          a.can-view-option(tabindex='-1', href='#') can view
        li
          a.can-edit-option(tabindex='-1', href='#') can edit

  td
    a.btn-mini.remove-collab.btn.btn-danger(href='#')
      i.icon-remove
